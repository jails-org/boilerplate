/** Reset **/
*
	margin 0
	padding 0
	box-sizing border-box

img
	max-width 100%

/** Design System **/
.ds

	&-header
		padding 80px 100px
		background-color #ededed
		h1
			font-weight 400

	&-section
		padding 0 100px
		margin 50px 0
		*
			line-height 2

	&-title
		border-bottom 1px solid #ededed
		padding-bottom 20px
		margin-bottom 40px
		line-height 1

