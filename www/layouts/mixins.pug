mixin js()
	script(type="text/javascript").
		var Whitelabel = !{JSON.stringify(Whitelabel.route)} ;
	script(type="text/javascript" src=`${Whitelabel.assetsPath}js/main.js?v=${Whitelabel.hash}` defer)
	script(type="text/javascript" src=`${Whitelabel.assetsPath}js/${Whitelabel.page}.js?v=${Whitelabel.hash}` defer)

mixin css()
	link( rel="stylesheet" href=`${Whitelabel.assetsPath}css/${Whitelabel.page}.css?v=${Whitelabel.hash}` )

mixin log( variable )
	if Whitelabel.environment != 'production'
		script.
			console.groupCollapsed('PUG LOGGING')
			console.log(!{JSON.stringify(variable)})
			console.groupEnd()

mixin svg-sprite()
	script(type="text/javascript").
		!(function(){
			var request = new XMLHttpRequest();
			request.onload = function(e) {
				var wrapper = document.createElement('div');
				wrapper.id = 'svg-sprite';
				wrapper.innerHTML = request.responseText;
				wrapper.style.display = 'none';
				document.body.insertBefore(wrapper, document.body.childNodes[0]);
			};
			request.open("GET", '#{Whitelabel.assetsFolder}icons/sprite.svg?v=#{Whitelabel.hash}', true);
			request.send();
		})();

mixin image( url, alt, lazyload = true )

	- const isExternal = /http/.test(url)
	- const src = isExternal ? url : require(`assets/images/${url}`).default

	if lazyload
		img.image.lazyload( data-src=src alt=alt data-static )&attributes(attributes)
	else
		img.image( src=src alt=alt data-static )&attributes(attributes)

mixin link-to( page, text = 'text to link-to' )

	- const route = Whitelabel.routes.find( route => route.page == page )
	- const active = route.page == page? 'active' : ''

	a( href=route.path class=active )&attributes(attributes)=text
		block

mixin icon( name )
	svg
		use( xlink:href=`#${name}` )
